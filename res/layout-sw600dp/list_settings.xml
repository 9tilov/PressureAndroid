<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/hourSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hour" 
                android:textColor="#EEDD82"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/textViewSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/hourSettings"
                android:text=":" 
                android:textColor="#EEDD82"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/minuteSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewSeparator"
                android:text="minute" 
                android:textColor="#EEDD82"
                android:textSize="@dimen/text_size"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center" >

            <TextView
                android:id="@+id/notifSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notif"
                android:textColor="#f39c12" 
                android:textSize="@dimen/text_size"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>