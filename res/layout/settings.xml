<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/profileGraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.04"
            android:text="" />

        <CheckBox
            android:id="@+id/checkBoxRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBoxTimePicker"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkBoxTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBoxRotation"
            android:layout_alignParentBottom="true"
            android:checked="false" />

        <TextView
            android:id="@+id/profileGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBoxRotation"
            android:layout_alignBottom="@+id/checkBoxRotation"
            android:layout_alignLeft="@+id/showCheckBox"
            android:layout_weight="0.04"
            android:text="Show graph after rotation " />

        <TextView
            android:id="@+id/showCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/checkBoxTimePicker"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.04"
            android:text="Show notifications" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listNotif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editNotif"
            android:padding="1dp"
            android:textSize="10sp" >
        </ListView>

        <EditText
            android:id="@+id/editNotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your notification" 
            android:focusableInTouchMode="true">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button"
            android:text="Save" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="192dp"
            android:layout_height="116dp"
            android:layout_above="@+id/btnSaveSettings"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/btnAddNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btnSaveSettings"
            android:layout_marginRight="55dp"
            android:layout_marginTop="61dp"
            android:background="@drawable/button"
            android:text="Add" />

    </RelativeLayout>

</LinearLayout>