<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:text="date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTextTime"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvTextDate"
                android:layout_alignParentBottom="true"
                android:text="time"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTextDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:layout_toLeftOf="@+id/textView3"
                android:text="dias"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTextSys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvTextDias"
                android:layout_alignBottom="@+id/tvTextDias"
                android:layout_toLeftOf="@+id/textView1"
                android:text="sys"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvTextDias"
                android:layout_toLeftOf="@+id/tvTextDias"
                android:text=" / "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvTextDias"
                android:layout_alignBottom="@+id/tvTextDias"
                android:layout_alignParentRight="true"
                android:layout_marginRight="114dp"
                android:text="mmhg"
                android:textSize="20sp" />

            <!-- <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvTextSys"
                android:src="@drawable/tonomer" /> -->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:text="b/m"
                android:textSize="20sp" />

            <!--
                 <ImageView
                android:id="@+id/imagePulse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/tvTextPulse"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvTextPulse"
                android:src="@drawable/heart_icon" />
            -->

            <TextView
                android:id="@+id/tvTextPulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/textView2"
                android:text="pulse"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>