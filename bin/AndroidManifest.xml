<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pressure"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pressure"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.pressure.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyStatistic"
            android:label="@string/statistics" >
        </activity>
        <activity
            android:name=".Graph"
            android:label="@string/graph"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Receiver"
            android:label="@string/receiver" >
        </activity>
        <activity android:name="com.pushbots.push.PBMsg" />
        <activity android:name="com.pushbots.push.PBListener" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <intent-filter>
                    <action android:name="com.example.pressure.MESSAGE" />

                    <category android:name="android.intent.category.DEFAULT" />
                </intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.example.pressure" />
            </intent-filter>
        </receiver>
        <receiver 
            android:name="com.pushbots.push.MsgReceiver" />
        <receiver
            android:name="Receiver"
            android:process=":receive" >
        </receiver>
    </application>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

</manifest>